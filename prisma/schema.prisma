// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}





model Product {
  id         Int      @id @unique @default(autoincrement())
  title     String
  author    String
  price     Int
  //content   String?
  //published Boolean @default(false)
  //orders    Order? @relation("OrderHasProduct",fields: [Product_orderId], references:[id])
  //Product_orderId  Int
}

model Order {
  id        Int      @id @unique @default(autoincrement())
  totalPrice   Int
  status       Status
  defaultValue String  @default("CART")
  user         User @relation(fields:[userId],references: [id])
  userId       Int

}

model User {
  id        Int      @id @unique @default(autoincrement())
  name          String?
  email         String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  order         Order[]
}

model OrderProducts {
  id        Int      @id @unique @default(autoincrement())
  quantity Int
  subtotal Int
}


 enum Status {
  CART
  PURCHASED
  SHIPPED
  REFUNDED
}

